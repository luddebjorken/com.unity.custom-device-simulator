.unity-device-simulator__toolbar {
    min-width: 300px;
    min-height: 20px;
}

.unity-device-simulator__control-panel {
    flex-direction: column;
    min-height: 200px;
    padding: 5px;
    font-size: 10px;
}

.unity-device-simulator__control-panel-label {
    margin-bottom: 3px;
}

.unity-device-simulator__screen-resolution-field {
    width: 35px;
}

.unity-device-simulator__screen-toggle, .unity-device-simulator__orientation {
    margin-left: 0px;
    margin-bottom: 1px;
}

.unity-device-simulator__orientation {
    width: 215px;
}

.unity-device-simulator__screen-toggle > Label, .unity-device-simulator__orientation > Label {
    min-width: 80px;
    width: 80px;
}

.unity-device-simulator__allowed-orientations {
    margin-left: 13px;
}

.unity-device-simulator__allowed-orientations > #unity-content {
    margin-left: 0px;
}

.unity-device-simulator__preview-panel-toolbar {
    height: 22px;
    min-height: 22px;
    min-width: 700px;
    align-items: center;
}

.unity-device-simulator__scale-value-label {
    width: 25px;
    margin-right: 5px;
}

.unity-device-simulator__scale-slider
{
    margin-bottom: 5px;
    width: 100px;
}

.unity-device-simulator__scale-label, .unity-device-simulator__scale-manipulate-label {
    border-left-width: 0px;
    border-right-width: 0px;
}

.unity-device-simulator__scale-manipulate-label {
    border-left-width: 0px;
}

.unity-device-simulator__rotate-label {
    margin-left: 3px;
    margin-top: 1px
}

.unity-device-simulator__rotate-image-container {
    align-items: center;
    justify-content: center;
    width: 20px;
    height: 20px;
    padding: 0px;
    border-width: 0px;
}

.unity-device-simulator__rotate-cw-image, .unity-device-simulator__rotate-ccw-image {
    margin-top : 1px;
    width: 12px;
    height: 15px;
}

.unity-device-simulator__rotate-ccw-image {
    margin-left: 2px;
    margin-right: 3px;
}

.unity-device-simulator__inactive-msg-container {
    flex-direction: row;
    justify-content: space-between;
    align-items: center;
    height: 21px;
    padding-left: 10px;
    margin-left: 2px;
    margin-right: 2px;
    margin-bottom: 2px;
    background-color: rgb(246, 178, 107);
}

.unity-device-simulator__scrollview-container, .unity-device-simulator__preview-container {
    align-items: center;
    justify-content: center;
}

.unity-device-simulator__scrollview-container {
    flex-grow: 1;
}

/* Styles for TwoPaneSplitView start*/
.unity-two-pane-split-view {
    flex-grow: 1;
}

.unity-two-pane-split-view--vertical {
    flex-direction: column;
}

.unity-two-pane-split-view--horizontal {
    flex-direction: row;
}

.unity-two-pane-split-view__content-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-two-pane-split-view__handle-container {
    position: absolute;
    top: 0;
    left: 0;
    right: 0;
    bottom: 0;
}

.unity-two-pane-split-view__dragline {
    background-color: rgba(0, 0, 0, 0);
    position: absolute;
}

.unity-two-pane-split-view__dragline--horizontal {
    width: 10px;
    left: -5px;
    top: 0px;
    bottom: 0px;
    cursor: resize-horizontal;
}

.unity-two-pane-split-view__dragline--vertical {
    height: 10px;
    top: -5px;
    left: 0px;
    right: 0px;
    cursor: resize-vertical;
}

.unity-two-pane-split-view__dragline-anchor {
    position: absolute;
}

.unity-two-pane-split-view__dragline-anchor--horizontal {
    width: 1px;
    top: 0px;
    bottom: 0px;
}

.unity-two-pane-split-view__dragline-anchor--vertical {
    height: 1px;
    left: 0px;
    right: 0px;
}
/* Styles for TwoPaneSplitView end*/
